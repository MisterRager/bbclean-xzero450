# --------------------------------------------------------------------
# makefile for bbMemLimiter - gcc (mingw)

# Compile:
#   you may want to change INST below
#   make -f makefile-gcc

# Versions:
#   gcc-3.4.2
#   binutils-2.15.90
#   mingw-runtime-3.7
#   w32api-3.2

OBJ     = bbMemLimiter.o
RES     =
BIN     = bbMemLimiter.dll
# INST    = c:\bblean\plugins\bbMemLimiter

BBAPI   =
BBLIB   =

ifdef INSTDIR
all: $(INST)/$(BIN)
else
all: $(BIN)
endif

bbMemLimiter.o: \
	bbMemLimiter.cpp \

clean:
	rm -f $(OBJ) $(RES) $(BIN)

$(INST)/$(BIN): $(BIN)
	copy $(BIN) $(INST)

$(BBLIB): $(BBAPI)/libBlackbox.def
	dlltool -d $< -l $@ -D blackbox.exe

# --------------------------------------------------------------------
CC      = gcc
WINDRES = windres.exe -J rc -O coff --include-dir $(<D)

CFLAGS  = -c -Wall -Os -I$(BBAPI)\
	-fno-rtti \
	-fno-exceptions \
	-fomit-frame-pointer

LIBS = -nostdlib -lkernel32 -luser32 -lpsapi
LINKEROPT = -Wl,--entry,_DllMainCRTStartup,--enable-stdcall-fixup

$(BIN): $(OBJ) $(BBLIB) $(RES) makefile-gcc
	$(CC) -mwindows -shared -s -o $(BIN) $(RES) $(OBJ) $(LIBS) $(LINKEROPT)

# --------------------------------------------------------------------

%.o: %.c
	$(CC) $(CFLAGS) $< -o $@

%.o: %.cpp
	$(CC) $(CFLAGS) $< -o $@

%.res: %.rc
	$(WINDRES) -i $< -o $@

# --------------------------------------------------------------------

